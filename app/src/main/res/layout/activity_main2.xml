<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="#332973"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/time"
        android:layout_width="31dp"
        android:layout_height="20dp"
        android:text="9:41"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/Voiti"
        android:layout_width="403dp"
        android:layout_height="48dp"
        android:text="Зарегистрироваться"
        app:backgroundTint="#FF6600"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="604dp" />

    <Button
        android:id="@+id/Reg"
        android:layout_width="403dp"
        android:layout_height="53dp"
        android:background="#673AB7"
        android:text="У меня уже есть аккаунт"
        android:textColor="#FFC400"
        app:backgroundTint="#352777"
        app:iconTint="#FFFFFF"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="650dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="E-mail"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="454dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Имя"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="350dp" />

    <EditText
        android:id="@+id/Familia"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Фамилия"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="402dp" />

    <EditText
        android:id="@+id/PasswordAgain"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Повторите пароль"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="549dp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="412dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Пароль"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="508dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="259dp"
        android:layout_height="179dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/qqq"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/worldCinema"
        android:layout_width="245dp"
        android:layout_height="92dp"
        android:text="WorldCinema"
        android:textColor="#FF6600"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="223dp" />

</androidx.constraintlayout.widget.ConstraintLayout>